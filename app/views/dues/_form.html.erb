<%= form_with(model: due) do |form| %>
  <% if due.errors.any? %>
    <div class="mb-5 text-center font-medium text-red-500" id="error_explanation">
      <h2 class="underline uppercase"><%= pluralize(due.errors.count, "error") %>:</h2>

      <ul>
        <% due.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field mb-5">
    <%= form.label :purpose, class: "uppercase mb-2 font-medium" %>
    <%= form.text_field :purpose, class: "input w-full max-w-xs input-bordered" %>
  </div>

  <div class="field mb-5">
    <%= form.label :transaction_date, class: "uppercase mb-2 font-medium" %>
    <br>
    <%= form.datetime_select :transaction_date, {}, class: "select select-bordered" %>
  </div>

  <div class="field mb-5">
    <%= form.label :user_id, class: "uppercase mb-2 font-medium" %>
    <%= form.select :user_id, User.order(:last_name).map { |user| [user.full_name, user.id] }, {include_blank: true, id: "id_of_the_user_id_select_box"}, class: "select select-bordered w-full max-w-xs" %>
  </div>

  <div class="field mb-5">
    <%= form.label :due_type, class: "uppercase mb-2 font-medium" %>
    <%= form.text_field :due_type, class: "input w-full max-w-xs input-bordered" %>
  </div>

  <div class="field mb-5">
    <%= form.label :is_paid, class: "uppercase mb-2 font-medium" %>
    <%= form.text_field :is_paid, class: "input w-full max-w-xs input-bordered" %>
  </div>

  <div class="field mb-5">
    <%= form.label :amount_due, class: "uppercase mb-2 font-medium" %>
    <%= form.text_field :amount_due, class: "input w-full max-w-xs input-bordered" %>
  </div>

  <div class="field mb-5">
    <%= form.label :created_at, class: "uppercase mb-2 font-medium" %>
    <br>
    <%= form.datetime_select :created_at, {}, class: "select select-bordered" %>
  </div>

  <div class="field mb-5">
    <%= form.label :updated_at, class: "uppercase mb-2 font-medium" %>
    <br>
    <%= form.datetime_select :updated_at, {}, class: "select select-bordered" %>
  </div>

  <div class="actions flex justify-center">
    <%= form.submit class: "btn btn-primary" %>    
  </div>
<% end %>