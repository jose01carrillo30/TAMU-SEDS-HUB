<%= form_with(model: attendance_record) do |form| %>
  <% if attendance_record.errors.any? %>
    <div class="mb-5 text-center font-medium text-red-500" id="error_explanation">
      <h2 class="underline uppercase"><%= pluralize(announcement.errors.count, "error") %>:</h2>

      <ul>
        <% attendance_record.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field mb-5">
    <%= form.label :arrival_time, class: "uppercase mb-2 font-medium" %>
    <br>
    <%= form.datetime_select :arrival_time, {}, class: "select select-bordered" %>
  </div>

 <div class="field mb-5">
    <%= form.label :user_id, class: "uppercase mb-2 font-medium" %>
    <%= form.select :user_id, User.order(:last_name).map { |user| [user.full_name, user.id] }, {include_blank: true, id: "id_of_the_user_id_select_box"}, class: "select select-bordered w-full max-w-xs" %>
  </div>

  <div class="field mb-5">
    <%= form.label :event_id %>
    <%= form.select :event_id, Event.order(:name).map { |event| [event.name, event.id] }, {include_blank: true, id: "id_of_the_event_id_select_box"}, class: "select select-bordered w-full max-w-xs"%>
  </div>

  <div class="actions flex justify-center">
    <%= form.submit class: "btn btn-primary" %>    
  </div>
<% end %>
