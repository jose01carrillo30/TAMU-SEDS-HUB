<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Pronouns</th>
      <th>Classification</th>
      <th>Major</th>
      <th>Phone number</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.pronouns %></td>
        <td><%= user.classification %></td>
        <td><%= user.major %></td>
        <td><%= user.phone_number %></td>
        <td><%= user.role %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) if can? :update, User %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } if can? :destroy, User %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<a href="/users/export.csv">Export CSV</a>

