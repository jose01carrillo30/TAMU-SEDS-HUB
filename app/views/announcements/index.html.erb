<p id="notice"><%= notice %></p>

<h1 class="text-lg text-red-100 my-5 font-bold">Announcements</h1>


<div>
  <table class="table w-full table-fixed">
    <thead>
    <tr>
      <th>Title</th>
      <th>Category</th>
      <th>Contents</th>
      <th><span class="sr-only">Modify</span></th>
    </tr>
    </thead>
    <tbody>
    <% @announcements.reverse_each do |announcement| %>
      <tr>
        <td class="truncate"><%= announcement.title %></td>
        <td class="truncate"><%= announcement.category %></td>
        <td class="truncate"><%= announcement.contents %></td>
        <td class="text-center">
          <div class="dropdown">
            <label tabindex="0" class="btn btn-secondary btn-xs">
              Options
              <svg class="-mr-1 ml-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
            </label>
            <ul tabindex="0" class="dropdown-content menu p-2 shadow bg-base-100 rounded-box w-52">
            <li><%= link_to 'Show', announcement %></li>
            <li><%= link_to 'Edit', edit_announcement_path(announcement) if can? :update, Announcement %></li>
            <li><%= link_to 'Delete', announcement, method: :delete, data: { confirm: 'Are you sure?' } if can? :destroy, Announcement %></li>
            </ul>
          </div>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<br>

<div class="flex justify-center">
<%= button_to 'New Announcement', new_announcement_path, class: 'btn', method: :get if can? :create, Announcement %>
</div>
